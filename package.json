{
    "name": "python-hover",
    "icon": "images/icon.png",
    "displayName": "Python Hover",
    "description": "Rich hover documentation for Python keywords (class, def, try, etc.) with live content from docs.python.org",
    "version": "2.1.1",
    "publisher": "KiidxAtlas",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/KiidxAtlas/python-hover.git"
    },
    "bugs": {
        "url": "https://github.com/KiidxAtlas/python-hover/issues"
    },
    "homepage": "https://github.com/KiidxAtlas/python-hover#readme",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "keywords": [
        "python",
        "documentation",
        "hover",
        "intellisense"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pythonHover.clearCache",
                "title": "Clear Documentation Cache",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.refreshContent",
                "title": "Refresh Current Hover Content",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.showStatistics",
                "title": "Show Cache Statistics",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.showAllSpecialMethods",
                "title": "Browse Special Methods (QuickPick)",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.openDocsAtCursor",
                "title": "Open Official Docs at Cursor",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.openDocsInEditorWithUrl",
                "title": "Open Docs in Editor (Simple Browser)",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.toggleExamples",
                "title": "Toggle Enhanced Examples",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.copyHoverText",
                "title": "Copy Hover Text",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.insertClassTemplate",
                "title": "Insert Class Template",
                "category": "Python Hover"
            }
        ],
        "configuration": {
            "title": "Python Hover",
            "properties": {
                "pythonHover.pythonVersion": {
                    "type": "string",
                    "default": "3",
                    "description": "Python documentation version to use (e.g., '3', '3.12')",
                    "pattern": "^[0-9]+(\\.[0-9]+)*$"
                },
                "pythonHover.cacheDays": {
                    "type": "number",
                    "default": 7,
                    "minimum": 1,
                    "maximum": 365,
                    "description": "Number of days to cache documentation content"
                },
                "pythonHover.showExamples": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show practical examples in hover tooltips"
                },
                "pythonHover.maxContentLength": {
                    "type": "number",
                    "default": 2200,
                    "minimum": 0,
                    "maximum": 5000,
                    "description": "Maximum character length for hover content. Set to 0 for unlimited."
                },
                "pythonHover.includeBuiltins": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include built-in functions (print, len, etc.) in hover documentation"
                },
                "pythonHover.includeDataTypes": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include data types (str, list, dict, etc.) in hover documentation"
                },
                "pythonHover.includeConstants": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include constants (None, True, False) in hover documentation"
                },
                "pythonHover.includeDocExamples": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include code examples extracted from official docs (not enhanced examples)."
                },
                "pythonHover.includeGrammar": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include grammar/production blocks from docs when available."
                },
                "pythonHover.includeLists": {
                    "type": "boolean",
                    "default": true,
                    "description": "Include the first bullet/numbered list when useful."
                },
                "pythonHover.summaryOnly": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show only summary paragraphs (no code or lists) from official docs."
                },
                "pythonHover.showSpecialMethodsSection": {
                    "type": "boolean",
                    "default": true,
                    "description": "For class hovers, include a compact special methods section."
                },
                "pythonHover.offlineOnly": {
                    "type": "boolean",
                    "default": false,
                    "description": "Do not fetch from the network; show cached docs and/or examples only."
                },
                "pythonHover.httpTimeoutMs": {
                    "type": "number",
                    "default": 6000,
                    "minimum": 1000,
                    "maximum": 30000,
                    "description": "HTTP timeout (ms) when fetching official docs."
                },
                "pythonHover.httpRetries": {
                    "type": "number",
                    "default": 1,
                    "minimum": 0,
                    "maximum": 3,
                    "description": "Number of retry attempts on HTTP errors/timeouts."
                },
                "pythonHover.contextAware": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable context-aware hover detection"
                },
                "pythonHover.showActionLinks": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show helpful action links in hover (open docs, insert template, copy)."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p .",
        "watch": "tsc -w -p .",
        "vscode:prepublish": "npm run compile",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^20.5.1",
        "@types/vscode": "^1.90.0",
        "@vscode/vsce": "^3.6.0",
        "typescript": "^5.5.0"
    }
}
